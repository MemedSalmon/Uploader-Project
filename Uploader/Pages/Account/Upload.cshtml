@page
@model Uploader.Pages.UploadModel
@{
    ViewData["Title"] = "Post";
}

<div class="form col shadow">
    <form method="post" enctype="multipart/form-data">
        <div class="row row-cols-1 text-left text-light p-3">
            <div class="col mb-2">Title:</div>
            <div class="input-group mb-2">
                <input class="form-control text-light border-info border-0 ml-3 mr-3"
                       placeholder="Title..."
                       type="text"
                       asp-for="Post.Title" />
            </div>
            <div class="col"><span class="text-danger" asp-validation-for="Post.Title"></span></div>
        </div>

        <div class="row row-cols-1 text-left text-light p-3">
            <input class="d-none" accept=".txt, video/*, image/*" type="file" id="file" asp-for="Post.TempFile" />
            <div class="col mb-2">File:</div>
            <div class="d-flex col justify-content-center mb-2">
                <label class="file-input" for="file">
                    <i class="fa fa-upload fa-3x"></i>
                </label>
            </div>
            <div class="col"><span class="text-danger" asp-validation-for="Post.TempFile"></span></div>
        </div>

        <div class="form-submit row row-cols-1 text-center p-3">
            <div class="col"><button class="btn" type="submit">Upload</button></div>
        </div>

    </form>
</div>
