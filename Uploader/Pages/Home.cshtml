@page
@model Uploader.Pages.HomeModel
@{
    ViewData["Title"] = User.Identity.Name;
}


<div class="row row-cols-1 justify-content-center">
    <form class="col upload-form mb-3" method="post" asp-page="/account/upload">
        <button class="btn shadow text-light p-3" type="submit"><span class="fa fa-upload fa-2x"></span></button>
    </form>

    <div class="col row row-cols-1 justify-content-center post p-0">
        @for (int i = 0; i < Model.Posts.Count(); i++)
        {
            <div class="col row row-cols-1 post-link shadow p-0">
                <a class="col d-flex align-items-center text-light text-decoration-none h-100"
                    asp-page="/post" asp-route-id="@Model.Posts[i].Id">
                    <div class="col-8 text-nowrap overflow-hidden text-left"><h3 class="m-0">@Model.Posts[i].Title</h3></div>
                    <div class="col-4 text-nowrap overflow-hidden text-left"><h3 class="m-0">@Model.Posts[i].Type</h3></div>
                </a>
                <form class="delete-button col" method="post" enctype="multipart/form-data" id="@Model.Posts[i].Id"
                      asp-controller="Main" asp-action="DeletePost">
                    <button class="btn btn-danger w-100" type="submit" form="@Model.Posts[i].Id">Delete</button>
                    <input class="d-none" name="id" type="text" value="@Model.Posts[i].Id"/>
                </form>
            </div>       
        }

    </div>
</div>

